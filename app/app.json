{
  "expo": {
    "name": "kamera",
    "slug": "kamera",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.rkcompany.kamera",
      "infoPlist": {
        "UIBackgroundModes": [
          "audio"
        ],
        "NSCameraUsageDescription": "kamera precisa de acesso à câmera para transmitir o vídeo.",
        "NSMicrophoneUsageDescription": "kamera precisa de acesso ao microfone para transmitir o áudio."
      }
    },
    "android": {
      "package": "com.rkcompany.kamera",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0f172a"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-dev-client",
      "@config-plugins/react-native-webrtc"
    ]
  }
}